<?xml version="1.1"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="batrobot">   <!-- http://www.ros.org/wiki/xacro -->

    <xacro:arg name="is_ignition" default="true" />
    <xacro:arg name="is_sim" default="true" />

    <xacro:include filename="$(find batrobot_description)/urdf/bat_robot_gazebo.xacro" />
    <xacro:include filename="$(find batrobot_description)/urdf/bat_robot_ros2_control.xacro" />

    <xacro:property name="PI" value="3.14159" />
    <xacro:property name="effort" value="30.0" />
    <xacro:property name="velocity" value="10.0" />

    <xacro:macro name="default_inertial" params="mass">
        <inertial>
            <mass value="${mass}" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                     iyy="1.0" iyz="0.0"
                     izz="1.0" />
       </inertial>
    </xacro:macro>

    <link name="world"></link>

    <link name="base_link">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin xyz="-0.39 -0.09 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/base.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.39 -0.09 0" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/base.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="virtual_joint" type="fixed">
        <parent link="world" />
        <child link="base_link" />
        <origin xyz="0 0 0" rpy="0 0 0" />
    </joint>


    <link name="base_plate">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin xyz="-0.05 -0.077 -0.012" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/base_plate.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.05 -0.077 -0.012" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/base_plate.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="joint_1" type="revolute">
        <parent link="base_link" />
        <child link="base_plate" />
        <axis xyz ="0 0 1" />
         <origin rpy="0 0 0" xyz="0 0 0.28" /> 
        <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
    </joint>


    <link name="link1">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin xyz="0.09 -0.29 -0.16" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/joint1.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="0.09 -0.29 -0.16" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/joint1.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="joint_2" type="revolute">
        <parent link="base_plate" />
        <child link="link1" />
        <axis xyz ="0 1 0" />
         <origin rpy="0 0 0" xyz="0 0 0.12" velocity="${velocity}" />
         <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
    </joint>

 
    <link name="link2">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin xyz="-0.05 0.01 -0.067" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/joint2.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="-0.05 0.01 -0.067" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/joint2.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="joint_3" type="revolute">
        <parent link="link1" />
        <child link="link2" />
        <axis xyz ="0 1 0" />
         <origin rpy="0 0 0" xyz="0 0 0.47" velocity="${velocity}" />
         <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
    </joint>


     <link name="link3">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin xyz="-2.85 0.05 0.59" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/joint3.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="-2.85 0.05 0.59" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/joint3.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="joint_4" type="revolute">
        <parent link="link2" />
        <child link="link3" />
        <axis xyz ="0 1 0" />
         <origin rpy="0 0 0" xyz="0 0 0.55" velocity="${velocity}" />
         <limit lower="-${PI/2}" upper="${PI/2}" effort="${effort}" velocity="${velocity}" />
    </joint>


    <link name="gripper_right">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin xyz="-2.25 0.047 0.83" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/gripper_right.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>
        <collision>
            <origin xyz="-2.25 0.047 0.83" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/gripper_right.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="joint_5" type="prismatic">
        <parent link="link3" />
        <child link="gripper_right" />
        <axis xyz ="0 1 0" />
         <origin rpy="0 0 0" xyz="0 0 0.42" velocity="${velocity}" />
         <limit lower="-0.075" upper="0.008" effort="${effort}" velocity="${velocity}" />
    </joint>


    <link name="gripper_left">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin xyz="-0.08 -0.065 0.23" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/gripper_left.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </visual>

        <collision>
            <origin xyz="-0.08 -0.065 0.23" rpy="0 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/gripper_left.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="joint_6" type="prismatic">
        <parent link="link3" />
        <child link="gripper_left" />
        <axis xyz ="0 1 0" />
         <origin rpy="0 0 0" xyz="0 0 0.47" velocity="${velocity}" />
         <mimic joint="joint_5" multiplier="-1" />
         <limit lower="-0.075" upper="0.008" effort="${effort}" velocity="${velocity}" />
    </joint>
    
    <link name="rgb_camera">
        <xacro:default_inertial mass="0.1" />
        <visual>
            <origin xyz="-0.09 0 0.21" rpy="-0.62 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/pi_camera.STL" scale="0.01 0.01 0.001" />
            </geometry>
        </visual>

        <collision>
            <origin xyz="-0.09 0 0.21" rpy="-0.62 0 0" />
            <geometry>
                <mesh filename="package://batrobot_description/meshes/gripper_left.stl" scale="0.01 0.01 0.01" />
            </geometry>
        </collision>
    </link>

    <joint name="camera_joint" type="fixed">
        <parent link="base_link" />
        <child link="rgb_camera" />
        <origin rpy="0 0 0" xyz="0 0 0" velocity="${velocity}" />
    </joint> 
   

</robot> 